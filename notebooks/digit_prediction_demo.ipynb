# End-to-end digit prediction demo (same preprocessing as GUI)

import numpy as np
import matplotlib.pyplot as plt
from PIL import Image
from tensorflow.keras.models import load_model
model = load_model("../models/model.h5")
def preprocess_drawn_image(img):
    img_array = np.array(img)

    rows = np.any(img_array > 0, axis=1)
    cols = np.any(img_array > 0, axis=0)

    if not rows.any() or not cols.any():
        return None

    rmin, rmax = np.where(rows)[0][[0, -1]]
    cmin, cmax = np.where(cols)[0][[0, -1]]

    padding = 20
    rmin = max(0, rmin-padding)
    rmax = min(img_array.shape[0], rmax+padding)
    cmin = max(0, cmin-padding)
    cmax = min(img_array.shape[1], cmax+padding)

    cropped = img_array[rmin:rmax, cmin:cmax]
    img_pil = Image.fromarray(cropped)

    w, h = img_pil.size
    if w > h:
        new_w, new_h = 20, int(20*h/w)
    else:
        new_h, new_w = 20, int(20*w/h)

    resized = img_pil.resize((new_w, new_h), Image.Resampling.LANCZOS)

    final_img = Image.new("L", (28,28), 0)
    final_img.paste(resized, ((28-new_w)//2, (28-new_h)//2))

    arr = np.array(final_img) / 255.0
    return arr.reshape(1,28,28,1)
img = Image.open("../data/sample_digits/5/sample1.png").convert("L")

processed = preprocess_drawn_image(img)
prediction = model.predict(processed)

digit = np.argmax(prediction)
confidence = prediction[0][digit] * 100

plt.imshow(img, cmap="gray")
plt.title(f"Prediction: {digit} ({confidence:.1f}%)")
plt.axis("off")
plt.show()
