# Analysis of handwritten digit images (drawn / sample images)

import os
import numpy as np
import matplotlib.pyplot as plt
from PIL import Image
DATA_PATH = "../data/sample_digits"

images = []
labels = []

for label in os.listdir(DATA_PATH):
    label_path = os.path.join(DATA_PATH, label)
    if os.path.isdir(label_path):
        for file in os.listdir(label_path):
            img = Image.open(os.path.join(label_path, file)).convert("L")
            images.append(np.array(img))
            labels.append(int(label))

print("Total samples:", len(images))
plt.figure(figsize=(10,4))
for i in range(10):
    plt.subplot(2,5,i+1)
    plt.imshow(images[i], cmap="gray")
    plt.title(f"Label: {labels[i]}")
    plt.axis("off")
plt.show()
sizes = [img.shape for img in images]
print("Unique image sizes:", set(sizes))


